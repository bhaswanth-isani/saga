{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "tab",
        "lineWidth": 100,
        "attributePosition": "auto"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "noUnusedImports": "warn"
            },
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "complexity": {
                "noStaticOnlyClass": "off"
            }
        },
        "ignore": [
            "./node_modules/**"
        ]
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "trailingCommas": "all",
            "bracketSpacing": true,
            "semicolons": "asNeeded"
        }
    }
}